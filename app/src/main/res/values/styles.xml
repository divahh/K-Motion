<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema utama aplikasi dengan Action Bar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema khusus untuk Splash Screen tanpa Action Bar -->
    <style name="Theme.MyApp.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/ic_launcher_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
</resources>